
<h1><%= @auction.title %></h1>

<h4>Bid on this item: <%= @auction.title %></h3>
  <div id="bid-error"></div>
  <%= simple_form_for([@auction, @bid], remote: true) do |f| %>
    <%= f.input :amount %>
    <%= f.submit %>
  <% end %>
  <br>

  <div id="auction-bids-list">
    <% @auction.bids.each do |bid| %>
    <%= render partial: "/bids/bid", locals: { bid: bid } %>
    <% end %>
  </div>
